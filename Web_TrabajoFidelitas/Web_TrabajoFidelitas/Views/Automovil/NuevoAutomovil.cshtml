@model Web_TrabajoFidelitas.Entidades.Automovil

@{
    ViewBag.Title = "Registrar Automovil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a class="btn btn-primary m-2 my-4" href="@Url.Action("MostrarAutomoviles","Automovil")"><i class="bi bi-arrow-left-circle"></i> Regresar </a>
<div class="card shadow mb-4">
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
            <div class="card-body" style="margin-top: 20px;">
                <div class="table-responsive">
                    <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">

                        @if (ViewBag.MsjPantalla != null)
                        {
                            <div class="alert alert-warning" role="alert" style="text-align:center">
                                @ViewBag.MsjPantalla
                            </div>
                        }

                        @using (Html.BeginForm("NuevoAutomovil", "Automovil", FormMethod.Post))
                        {
                            <div class="form-group my-3">
                                @Html.Label("ID del Cliente")
                                @Html.DropDownListFor(m => m.idCliente, ViewBag.IdsClientes as List<SelectListItem>, new { @class = "form-control form-control-user", @required = "true" })
                            </div>
                            <div class="form-group my-3">
                                @Html.Label("Número de Placa")
                                @Html.TextBoxFor(m => m.placa, new { @class = "form-control", @placeholder = "placa", @required = "true" })
                                @Html.ValidationMessageFor(m => m.placa, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group my-3">
                                @Html.Label("Marca del Vehículo")
                                @Html.TextBoxFor(m => m.marca, new { @class = "form-control", @placeholder = "marca", @required = "true" })
                                @Html.ValidationMessageFor(m => m.marca, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group my-3">
                                @Html.Label("Modelo del Vehículo")
                                @Html.TextBoxFor(m => m.modelo, new { @class = "form-control", @placeholder = "modelo", @required = "true" })
                                @Html.ValidationMessageFor(m => m.modelo, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group my-3">
                                @Html.Label("Año del Vehículo")
                                @Html.TextBoxFor(m => m.ano, new { @class = "form-control", @placeholder = "año", @required = "true" })
                                @Html.ValidationMessageFor(m => m.ano, "", new { @class = "text-danger" })
                            </div>

                            <div style="display: flex; align-items: center; flex-direction: column;">
                                <input type="submit" class="btn btn-primary btn-block" value="Registrar Automovil" style="margin-top: 20px; margin-bottom: 20px;">
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>